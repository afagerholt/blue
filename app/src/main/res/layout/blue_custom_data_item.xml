<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/blue_custom_data_item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="4dp"
        android:textColor="@color/nc_blue"
        android:textSize="12sp"
        tools:text="@string/visma_blue_metadata_more_information_currency_code" />

    <Spinner
        android:id="@+id/blue_custom_data_item_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionNext"
        tools:listitem="@layout/blue_spinner_item" />
</LinearLayout>