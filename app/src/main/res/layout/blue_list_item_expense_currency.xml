<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/listItemExpenseCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:duplicateParentState="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="left"
        android:textColor="@color/primary_text_nc_light"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/currency_selector_image"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <ImageView
        android:id="@+id/currency_selector_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@drawable/blue_ic_use_blue"/>

</RelativeLayout>